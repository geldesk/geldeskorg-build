doctype html
html(lang=t('site.lang') dir='auto')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    block head
      title= t('site.title')
    meta(name='description' content=t('site.description'))
    link(rel='apple-touch-icon' href='apple-touch-icon.png')
    |!{build.bundles(['jqbs', 'ko', 'main'])}
  body
    //- NAVBAR
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button' 
            data-toggle='collapse' data-target='#navbar' 
            aria-controls='navbar'
          )
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
            img(src='lib/main/img/paste-logo-295x46-opt.png' 
              width='295' height='46')

    //- CONTENT
    block content
      p!= '&nbsp;'

    //- FOOTER
    = '\n    '
    //- The next container should probably be in a footer.
    .container
      em #{t('site.primaryDomain')} v#{build.pkg.version} #[small (#{build.locale})]
      em.pull-right= t('site.copyright')
